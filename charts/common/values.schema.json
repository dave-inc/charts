{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of replicas for the application."
    },
    "cloudArmor": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9-]+-ca$"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "required": []
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string"
              },
              "csmStaticIpName": {
                "type": "string",
                "$comment": "Only used if canary.enabled is true. Optional, If not set, a name is generated using Release.Name with '-csm'"
              },
              "staticIpName": {
                "type": "string"
              },
              "annotations": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "required": []
              },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "backend": {
                      "type": "object",
                      "properties": {
                        "service": {
                          "type": "object",
                          "properties": {
                            "name": {
                              "type": "string",
                              "pattern": "^[a-z0-9][a-z0-9-]+-ca$"
                            },
                            "port": {
                              "type": "object",
                              "properties": {
                                "number": {
                                  "type": "integer",
                                  "minimum": 1,
                                  "maximum": 65535
                                }
                              },
                              "required": [
                                "number"
                              ],
                              "additionalProperties": false
                            },
                            "targetPort": {
                              "type": "integer",
                              "minimum": 1,
                              "maximum": 65535
                            }
                          },
                          "required": [
                            "name",
                            "port",
                            "targetPort"
                          ],
                          "additionalProperties": false
                        }
                      },
                      "required": [
                        "service"
                      ],
                      "additionalProperties": false
                    },
                    "path": {
                      "type": "string"
                    },
                    "pathType": {
                      "type": "string",
                      "enum": [
                        "ImplementationSpecific",
                        "Prefix",
                        "Exact"
                      ]
                    }
                  },
                  "required": [
                    "backend",
                    "path",
                    "pathType"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        },
        "paths": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "backend": {
                "type": "object",
                "properties": {
                  "service": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string",
                        "pattern": "^[a-z0-9][a-z0-9-]+-ca$"
                      },
                      "port": {
                        "type": "object",
                        "properties": {
                          "number": {
                            "type": "integer",
                            "minimum": 1,
                            "maximum": 65535
                          }
                        },
                        "required": [
                          "number"
                        ],
                        "additionalProperties": false
                      },
                      "targetPort": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 65535
                      }
                    },
                    "required": [
                      "name",
                      "port",
                      "targetPort"
                    ],
                    "additionalProperties": false
                  }
                },
                "required": [
                  "service"
                ],
                "additionalProperties": false
              },
              "path": {
                "type": "string"
              },
              "pathType": {
                "type": "string",
                "enum": [
                  "ImplementationSpecific",
                  "Prefix",
                  "Exact"
                ]
              }
            },
            "required": [
              "backend",
              "path",
              "pathType"
            ],
            "additionalProperties": false
          }
        },
        "certificate": {
          "type": "object",
          "properties": {
            "host": {
              "type": "string"
            },
            "secretName": {
              "type": "string"
            },
            "issuer": {
              "type": "string",
              "enum": [
                "aws-certificate-issuer",
                "letsencrypt"
              ]
            },
            "alternativeDnsNames": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "host"
          ],
          "additionalProperties": false
        },
        "backendConfig": {
          "type": "object",
          "properties": {
            "healthCheck": {
              "type": "object",
              "properties": {
                "requestPath": {
                  "type": "string"
                },
                "type": {
                  "type": "string"
                }
              },
              "required": [
                "requestPath",
                "type"
              ],
              "additionalProperties": false
            },
            "securityPolicy": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "iap": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "oauthclientCredentials": {
                  "type": "object",
                  "properties": {
                    "secretName": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "secretName"
                  ],
                  "additionalProperties": false
                }
              },
              "required": [
                "enabled",
                "oauthclientCredentials"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "healthCheck",
            "securityPolicy"
          ]
        },
        "frontendConfig": {
          "type": "object",
          "properties": {
            "redirectToHttps": {
              "type": "object",
              "properties": {
                "enabled": {
                  "type": "boolean"
                },
                "responseCodeName": {
                  "type": "string"
                }
              },
              "required": [
                "enabled",
                "responseCodeName"
              ],
              "additionalProperties": false
            },
            "sslPolicy": {
              "type": "string"
            }
          },
          "required": [],
          "additionalProperties": false
        },
        "staticIpName": {
          "type": "string"
        },
        "csmStaticIpName": {
          "type": "string",
          "$comment": "Only used if canary.enabled is true. Optional, If not set, a name is generated using Release.Name with '-csm'"
        },
        "service": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "enabled",
        "certificate",
        "backendConfig"
      ],
      "oneOf": [
        {
          "required": [
            "hosts"
          ],
          "$comment": "If hosts is defined, paths should not be defined"
        },
        {
          "required": [
            "paths"
          ],
          "$comment": "If paths is defined, hosts should not be defined"
        }
      ],
      "additionalProperties": false
    },
    "initContainer": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "name": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "command": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "if": {
        "properties": {
          "enabled": {
            "const": true
          }
        }
      },
      "then": {
        "required": [
          "name",
          "image",
          "command"
        ]
      }
    },
    "deploymentContainer": {
      "type": "object",
      "properties": {
        "command": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "port": {
          "type": "integer",
          "minimum": 1024,
          "maximum": 65535
        },
        "livenessProbe": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string"
            },
            "port": {
              "type": "integer",
              "minimum": 1024,
              "maximum": 65535
            },
            "httpHeaders": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "value"
                ]
              }
            },
            "failureThreshold": {
              "type": "integer",
              "minimum": 1
            },
            "initialDelaySeconds": {
              "type": "integer",
              "minimum": 0
            },
            "periodSeconds": {
              "type": "integer",
              "minimum": 1
            },
            "successThreshold": {
              "type": "integer",
              "minimum": 1
            },
            "timeoutSeconds": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": [
            "path",
            "failureThreshold",
            "initialDelaySeconds",
            "periodSeconds",
            "successThreshold",
            "timeoutSeconds"
          ]
        },
        "readinessProbe": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string"
            },
            "port": {
              "type": "integer",
              "minimum": 1024,
              "maximum": 65535
            },
            "httpHeaders": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "value"
                ]
              }
            },
            "failureThreshold": {
              "type": "integer",
              "minimum": 1
            },
            "initialDelaySeconds": {
              "type": "integer",
              "minimum": 0
            },
            "periodSeconds": {
              "type": "integer",
              "minimum": 1
            },
            "successThreshold": {
              "type": "integer",
              "minimum": 1
            },
            "timeoutSeconds": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": [
            "path",
            "failureThreshold",
            "initialDelaySeconds",
            "periodSeconds",
            "successThreshold",
            "timeoutSeconds"
          ]
        },
        "startupProbe": {
          "type": "object",
          "properties": {
            "path": {
              "type": "string"
            },
            "port": {
              "type": "integer",
              "minimum": 1024,
              "maximum": 65535
            },
            "httpHeaders": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "value"
                ]
              }
            },
            "failureThreshold": {
              "type": "integer",
              "minimum": 1
            },
            "initialDelaySeconds": {
              "type": "integer",
              "minimum": 0
            },
            "periodSeconds": {
              "type": "integer",
              "minimum": 1
            },
            "successThreshold": {
              "type": "integer",
              "minimum": 1
            },
            "timeoutSeconds": {
              "type": "integer",
              "minimum": 1
            }
          },
          "required": [
            "path",
            "failureThreshold",
            "initialDelaySeconds",
            "periodSeconds",
            "successThreshold",
            "timeoutSeconds"
          ]
        },
        "customLivenessProbe": {
          "type": "object"
        },
        "customReadinessProbe": {
          "type": "object"
        },
        "customStartupProbe": {
          "type": "object"
        },
        "lifecycle": {
          "type": "object"
        }
      },
      "additionalProperties": false,
      "required": [
        "port"
      ]
    }
  }
}
